<%= link_to "Relocating or taking a trip? Let your friends know!", new_notification_path, class: "btn btn-success" %>
<%= @notifications.each do |notification| %>
<div class="notification">
  <div class="row">
    <div class="span1">
      <%= link_to image_tag(status.user.gravatar_url), profile_path(notification.user) %>
    </div>
    <div class="span7">
      <%= notification.user.full_name %>
      <p><%= notification.content %></p>
      <div class="meta">
        <%= link_to time_ago_in_words(notification.created_at) + " ago", notification %>
        <span class="admin">
          | <%= link_to "Edit", edit_notification_path(notification) %> | 
          <%= link_to "Delete", notification, method: :delete, data: { confirm: "Are you sure you want to delete this notification?"} %>
        </span>
      </div>
    </div>
  </div>
</div>
<% end %>










