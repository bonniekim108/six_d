
<h2>Log in</h2>

<%= form_tag '/login' do %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

    <%= f.label :username %>
    <%= f.username_field :username, class: 'form-control' %>

    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control' %>

    <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>

    <p>Haven't signed up yet? <%= link_to "Sign up now!", signup_path %> </p>

  </div>
</div>
