<!DOCTYPE html>
<html ng-app>
<head>
  <title>SixD</title>
  <script src='https://cdn.firebase.com/js/client/2.0.4/firebase.js'></script>
  <script src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js'></script>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% flash.each do |type, message| %>
    <div class="alert alert-<%= message_type %>"><%= message %></div>
      <a href="#" class="close">&times;</a>
    </div>
  <% end %>

  <div class="navbar navbar-inverse navbar-fixed-top primaryNav previewNav" role="navigation">
    <a href="#" class="brand">Six Degrees</a>
    <div class="navbar-top" id="header-nav">
      <div class="container">
        <div class="row">
          <div class="col-lg-6 col-sm-6 col-xs-6 col-md-6">
            <div class="pull-left">
              <ul class="user-enu">
                <li>
                  <a href="contact.html">
                    <span class="hidden-xs">CONTACT US</span>
                  </a>
                </li>
              </ul>
            </div>
          </div>
          <div class="col-lg-6.col-sm-6.col-xs-6.col-md-6.no-margin.no-padding">
            <div class="pull-right">
              <ul class="right-user-menu">  
                <% if logged_in? %>
                  <li><%= link_to 'Friends', friendships_path %></li>
                  <li><%= link_to 'Log out', logout_path %></li>
                <% else %>
                  <li><%= link_to 'Sign up', signup_path %></li>
                  <li><%= link_to 'Log in', login_path %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <%= yield %>
  </div>
</body>
</html>
